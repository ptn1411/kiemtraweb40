<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>
<body>
<%- include('partials/nav.ejs') %>
<main class="container">
        <div class="card" >
            <div class="card-body">
                <img style="width: 200px" src="<%= data?.image %>" class="card-img-top" alt="<%= data?.name %>">
                <h5 class="card-title"><%=data?.name%></h5>
                <h6 class="card-subtitle mb-2 text-muted"><%= data?.price %> <%= data?.unit %> </h6>
                <p class="card-text">Còn: <%= data?.quantity %></p>
                <p class="card-text">Loại: <%= data?.category %></p>
                <p class="card-text"><%=data?.description%></p>
                <button data-idcart="<%=data?.id%>" class="btn btn-primary buttonAddToCart">Add to cart</button>
            </div>
        </div>
</main>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<%- include('partials/script.ejs') %>

</body>
</html>
